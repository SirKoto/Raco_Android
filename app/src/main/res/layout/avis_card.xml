<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/avis_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:transitionGroup="true"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/title_card_avis"
                style="@style/TextAppearance.MaterialComponents.Headline3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimary"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/colorOnPrimary"
                tools:text="LP" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/title_card_avis"
                android:background="@color/colorPrimaryVariant"
                android:gravity="fill_vertical"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:translationZ="5dp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/avis_info_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/none"
                    android:textColor="@color/colorOnPrimary"
                    tools:text="Notes provisionals examen final i pràctica obligatòria de Python" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@color/colorOnPrimary" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/avis_info_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/none"
                    android:textColor="@color/colorOnPrimary"
                    tools:text="Notes provisionals del treball de competències transversals" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@color/colorOnPrimary" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/avis_info_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/none"
                    android:textColor="@color/colorOnPrimary"
                    tools:text="Notes provisionals examen final i dates i hores de revisió" />

            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>

    </RelativeLayout>

</android.support.design.card.MaterialCardView>